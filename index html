<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <title>Mapa de Estações e Apeadeiros</title>
  <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
  <style>
    #map { height: 100vh; margin: 0; padding: 0; }
    body { margin: 0; }
  </style>
</head>
<body>
  <div id="map"></div>

  <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
  <script>
    // Inicializar o mapa centrado em Portugal
    const map = L.map('map').setView([39.5, -8.0], 7);

    // Camada base do OpenStreetMap
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '© OpenStreetMap contributors'
    }).addTo(map);

    // Carregar os dados do ficheiro JSON no GitHub
    fetch('https://raw.githubusercontent.com/miguelt007/comboios/main/estacoes.json')
      .then(response => response.json())
      .then(data => {
        data.forEach(ponto => {
          const marcador = L.marker([ponto.latitude, ponto.longitude]).addTo(map);
          marcador.bindPopup(`<strong>${ponto.nome}</strong><br>${ponto.tipo}`);
        });
      })
      .catch(error => console.error('Erro ao carregar o JSON:', error));
  </script>
</body>
</html>
